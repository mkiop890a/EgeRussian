<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarRoots"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Корни проверяемыми гласными" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Корни с безударными проверяемыми гласными:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Выбор гласной буквы в безударном положении в корне определяется способом проверки. Проверять необходимо формами того же слова или однокоренными словами, в которых проверяемый гласный находится под ударением."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Например: звезда — звёздный, скреплять — скрепка, смотреть — смотрит"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Есть несколько особенностей, на которые следует обратить внимание при такой проверке:"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1. Есть слова старославянского по происхождения с сочетаниями ра/ла, которые в русском языке имеют сочетания оро/оло."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Например: врата-ворота, глава-голова, бразды-борозда."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2. Нельзя проверять безударную гласную о в корнях глаголов совершенного вида формами несовершенного вида."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Например: затопить-топка (а не затапливать), опоздать — поздно (а не опаздывать), проглотить — глотка (а не проглатывать)."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="3. При выборе написания о или а в безударных глагольных корнях не следует использовать для проверки глаголы несовершенного вида с суффиксом -ыва-/-ива-."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Например: бросать — бросить (а не набрасывать), топтать — топчет (а не вытаптывать) и т.п."
            android:textColor="@color/black" />


    </LinearLayout>

</ScrollView>
