<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.student.fragments.tests.TestsFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarLogin"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Тесты"/>

    <Button
        android:id="@+id/btnTestAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ударения"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Правописание Н и НН в различных частях речи"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestPrefix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Правописание приставок: пре- и при-"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestUnstressedVerifiable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Правописание корней чередованием"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestDictionaryWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Правописание словарных слов"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestRoots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Правописание безударных проверяемых гласных"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestParonym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Паронимы"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestNotAndNeither"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Правописание НИ и НЕ с различными частями речи"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestSpeechStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Стили речи"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:id="@+id/btnTestMeansOfExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Средства выразительности"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>


</LinearLayout>

    </ScrollView>